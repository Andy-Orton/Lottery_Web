@page
@model FrontEnd.Pages.TicketVendorModel
@{
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="/Styles/StyleSheet.css" type="text/css"/>
    <title></title>
    <style>
        body {
            margin: 0;
            padding: 0;
            top: 7em;
            position: relative;
        }

        header {
            background-color: cornflowerblue;
            padding: 1px;
            box-shadow: 1px 5px #000000;
            position: fixed;
        }

        .sticky {
            position: fixed;
            top: 0;
            width: 100%;
        }

        .title {
            text-align: center;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        }

        .ball {
            height: 35px;
            width: 35px;
            border-radius: 50%;
            display: inline-block;
            text-align: center;
            border: .5px solid;
        }

        div {
            margin-bottom: 25px;
            margin-left: 10px;
        }

        span {
            margin-right: 10px;
        }

        .submit {
            height: 30px;
            width: 60px;
            background-color: cornflowerblue;
            border-radius: 15px 15px 15px 15px;
            font-weight: bold;
        }

        button:hover {
            box-shadow: 1px 3px #000000;
            height: 30px;
            width: 64px;
            transition-duration: .5s;
        }

        .quickpicks {
            width: 200px;
        }
    </style>
</head>

<header class="sticky">
    <h1 class="title">Ticket Vendor</h1>
</header>
<body>
    <p>
        <h4 class="title">
            Welcome to the Ticket Vendor we just need some information from you.
        </h4>
        <div>
            Player Name:
            <span>
                <input placeholder="Tanner Trimble" />
            </span>
        </div>

        <div>
            Pick your lottery numbers:
            <span><input class="ball" placeholder="1" /></span>
            <span><input class="ball" placeholder="2" /></span>
            <span><input class="ball" placeholder="3" /></span>
            <span><input class="ball" placeholder="4" /></span>
            <span><input class="ball" placeholder="5" /></span>
            <span><input class="ball" placeholder="6" style="background-color: red" /></span>
            <button class="submit">Submit</button>
        </div>

        <div>
            Let the Computer pick your numbers for you with - QuickPicks:
            <span><input class="quickpicks" placeholder="Enter number of tickets (1 - 1,000)" /></span>
            <button class="submit">Submit</button>
        </div>
    </p>
</body>
</html>